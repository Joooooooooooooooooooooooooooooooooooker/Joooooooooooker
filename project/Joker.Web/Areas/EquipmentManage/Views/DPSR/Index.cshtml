@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/EquipmentManage/DPSR/GetGridJson",
            height: $(window).height() - 128,
            colModel: [
                { label: '自增序号', name: 'F_No', hidden: true },
                { label: '主键ID', name: 'F_Id', hidden: true },
                { label: '装置编码', name: 'F_Data1', width: 80, align: 'left' },
                { label: '参数编码', name: 'F_Data2', width: 80, align: 'left' },
                { label: '是否启用', name: 'F_Data3', width: 80, align: 'left' },
                { label: '是否在拓扑中显示', name: 'F_Data4', width: 80, align: 'left' },
                { label: '参数报警上限', name: 'F_Data5', width: 80, align: 'left' },
                { label: '参数报警下限', name: 'F_Data6', width: 80, align: 'left' },
                {
                    label: '创建时间', name: 'F_CreatorTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                { label: '创建用户', name: 'F_CreatorUserId', width: 80, align: 'left' },
                {
                    label: '最新修改时间', name: 'F_LastModifyTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                { label: '最新修改用户', name: 'F_LastModifyUserId', width: 80, align: 'left' },
                {
                    label: '删除时间', name: 'F_DeleteTime', width: 80, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                { label: '删除用户', name: 'F_DeleteUserId', width: 80, align: 'left' },
                { label: '删除标识', name: 'F_DeleteMark', width: 80, align: 'left' }

            ],
            pager: "#gridPager",
            sortname: 'F_No desc',
            viewrecords: true
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增设置",
            url: "/EquipmentManage/DPSR/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改设置",
            url: "/EquipmentManage/DPSR/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/EquipmentManage/DPSR/DeleteForm",
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看设置",
            url: "/EquipmentManage/DPSR/Details?keyValue=" + keyValue,
            width: "700px",
            height: "550px",
            btn: null,
        });
    }
    //function PostAndGetFileByUrl(url, type, postdata) {
    //    var temp;
    //    $.ajax({
    //        url: url,
    //        type: type,
    //        data: { keyword: postdata },
    //        async: true,
    //        dataType: "Text",
    //        success: function (data) {
    //            downloadFile(data);
    //        }
    //    });
    //    return temp;
    //}
    function PostAndGetFileByUrl(url, type) {
        var temp;
        $.ajax({
            url: url,
            type: type,
            async: true,
            dataType: "Text",
            success: function (data) {
                downloadFile(data);
            }
        });
        return temp;
    }
    function btn_export() {
        var $gridList = $("#gridList");
        //var rowData = $gridList.jqGrid('getGridParam', 'selarrrow');
        //PostAndGetFileByUrl("/EquipmentManage/EquipmentInit/ExportExcel", "POST", rowData.join(","));
        PostAndGetFileByUrl("/EquipmentManage/DPSR/ExportExcel", "POST");
    }
    function downloadFile(url) {
        try {
            var elemIF = document.createElement("iframe");
            elemIF.src = url;
            elemIF.style.display = "none";
            document.body.appendChild(elemIF);
        } catch (e) {

        }
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建设置</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改设置</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除设置</a></li>
                <li><a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看设置</a></li>
                <li><a id="NF-export" authorize="yes" onclick="btn_export()"><i class="fa fa-file-excel-o"></i>导出设置</a></li>
                <li><a id="NF-import" authorize="yes" onclick="btn_import()"><i class="fa fa-floppy-o"></i>导入设置</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="设置编码" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
    <div id="gridPager"></div>
</div>
