@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        if (!!keyValue) {
            $.ajax({
                url: "/EquipmentManage/DPAS/GetFormJson",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (data) {
                    $("#form1").formSerialize(data);
                }
            });
        }
    });

    function initControl() {
        $("#F_Data3").bindSelect({
            url: "/EquipmentManage/DPAS/GetParentIDTreeSelectJson",
        });
    }

    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.submitForm({
            url: "/EquipmentManage/DPAS/SubmitForm?keyValue=" + keyValue,
            param: $("#form1").formSerialize(),
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    $(document).ready(function () {
        $("#F_Data3").select2();
    });
</script>

<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="">区域信息</a></li>
            @*<li class="active"><a href="#">区域信息</a></li>*@
            @*<li ><a href="#">区域信息</a></li>*@
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">上级</th>
                    <td class="formValue">
                        <select id="F_Data3" name="F_Data3" class="form-control required">
                            <option value="0">父节点</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">区域编码</th>
                    <td class="formValue">
                        <input id="F_Data1" name="F_Data1" type="text" class="form-control required" placeholder="请输入区域编码" />
                    </td>
                    <th class="formTitle">区域描述</th>
                    <td class="formValue">
                        <input id="F_Data2" name="F_Data2" type="text" class="form-control required" placeholder="请输入区域描述" />
                    </td>
                </tr>                
            </table>
        </div>
    </div>
</form>
